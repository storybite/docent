{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "justMyCode": false,
        },
        {
            "name": "app.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                /*"${file}",*/
                "${workspaceFolder}/app.py",
                "--server.port",
                "8501"
            ],
            "justMyCode": false
        },
        {
            "name": "src/app.py",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                /*"${file}",*/
                "${workspaceFolder}/src/app.py",
                "--server.port",
                "8501"
            ],
            "justMyCode": false
        }
    ]
}